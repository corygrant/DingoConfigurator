<UserControl x:Class="DingoConfigurator.Views.KeypadView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cd="clr-namespace:CanDevices.DingoPdm;assembly=CanDevices"
             xmlns:local="clr-namespace:DingoConfigurator.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Text="Enabled"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Padding="5" />
            <CheckBox Grid.Row="0"
                      Grid.Column="1"
                      Padding="5"
                      Margin="5"
                      MinWidth="40"
                      MaxWidth="40"
                      HorizontalAlignment="Left"
                      HorizontalContentAlignment="Center"
                      IsChecked="{Binding Kp.Enabled, Mode=TwoWay}"/>
            <TextBlock Grid.Row="0"
                       Grid.Column="2"
                       Text="CANopen&#x0a;Node ID"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Padding="5" />
            <TextBox Grid.Row="0"
                     Grid.Column="3"
                     Padding="5"
                     Margin="5"
                     MinWidth="100"
                     MaxWidth="100"
                     HorizontalAlignment="Left"
                     HorizontalContentAlignment="Center"
                     Text="{Binding Kp.BaseId, Mode=TwoWay}" />
            <TextBlock Grid.Row="0"
                       Grid.Column="4"
                       Text="Model"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Padding="5" />
            <ComboBox Grid.Row="0"
                      Grid.Column="5"
                      Margin="5 5 5 5"
                      MinWidth="100"
                      ItemsSource="{Binding Source={StaticResource KeypadModelEnumDataSource}}"
                      SelectedItem="{Binding Path=Kp.Model}"/>
            <TextBlock Grid.Row="0"
                       Grid.Column="6"
                       Text="Timeout (s)"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Padding="5" />
            <TextBox Grid.Row="0"
                     Grid.Column="7"
                     Padding="5"
                     Margin="5"
                     MinWidth="100"
                     MaxWidth="100"
                     HorizontalAlignment="Left"
                     HorizontalContentAlignment="Center"
                     Text="{Binding Kp.Timeout, Mode=TwoWay}" />
            <TextBlock Grid.Row="0"
                       Grid.Column="8"
                       Text="Timeout Enabled"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Padding="5" />
            <CheckBox Grid.Row="0"
                      Grid.Column="9"
                      Padding="5"
                      Margin="5"
                      MinWidth="40"
                      MaxWidth="40"
                      HorizontalAlignment="Left"
                      HorizontalContentAlignment="Center"
                      IsChecked="{Binding Kp.TimeoutEnabled, Mode=TwoWay}"/>

            <TextBlock Grid.Row="1"
                       Grid.Column="0"
                       Text="Backlight&#x0a;Brightness"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       TextAlignment="Right"
                       Padding="5" />
            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     Padding="5"
                     Margin="5"
                     MinWidth="100"
                     MaxWidth="100"
                     HorizontalAlignment="Left"
                     HorizontalContentAlignment="Center"
                     Text="{Binding Kp.BacklightBrightness, Mode=TwoWay}" />
            <TextBlock Grid.Row="1"
                       Grid.Column="2"
                       Text="Button&#x0a;Brightness"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       TextAlignment="Right"
                       Padding="5" />
            <TextBox Grid.Row="1"
                     Grid.Column="3"
                     Padding="5"
                     Margin="5"
                     MinWidth="100"
                     MaxWidth="100"
                     HorizontalAlignment="Left"
                     HorizontalContentAlignment="Center"
                     Text="{Binding Kp.ButtonBrightness, Mode=TwoWay}" />
            <TextBlock Grid.Row="1"
                       Grid.Column="4"
                       Text="Dimming Var"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Padding="5" />
            <ComboBox Grid.Row="1"
                      Grid.Column="5"
                      Margin="5 5 5 5"
                      MinWidth="100"
                      ItemsSource="{Binding Source={StaticResource VarMapEnumDataSource}}"
                      SelectedItem="{Binding Path=Kp.DimmingVar}"/>
            <TextBlock Grid.Row="1"
                       Grid.Column="6"
                       Text="Dim Backlight&#x0a;Brightness"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       TextAlignment="Right"
                       Padding="5" />
            <TextBox Grid.Row="1"
                     Grid.Column="7"
                     Padding="5"
                     Margin="5"
                     MinWidth="100"
                     MaxWidth="100"
                     HorizontalAlignment="Left"
                     HorizontalContentAlignment="Center"
                     Text="{Binding Kp.DimBacklightBrightness, Mode=TwoWay}" />
            <TextBlock Grid.Row="1"
                       Grid.Column="8"
                       Text="Dim Button&#x0a;Brightness"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       TextAlignment="Right"
                       Padding="5" />
            <TextBox Grid.Row="1"
                     Grid.Column="9"
                     Padding="5"
                     Margin="5"
                     MinWidth="100"
                     MaxWidth="100"
                     HorizontalAlignment="Left"
                     HorizontalContentAlignment="Center"
                     Text="{Binding Kp.DimButtonBrightness, Mode=TwoWay}" />

            <TextBlock Grid.Row="2"
                       Grid.Column="0"
                       Text="Backlight&#x0a;Color"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       TextAlignment="Right"
                       Padding="5" />
            <ComboBox Grid.Row="2"
                      Grid.Column="1"
                      Margin="5 5 5 5"
                      MinWidth="100"
                      IsEnabled="{Binding Path=Kp.ColorsEnabled}"
                      ItemsSource="{Binding Source={StaticResource BlinkBacklightColorEnumDataSource}}"
                      SelectedItem="{Binding Path=Kp.BacklightColor}"/>

        </Grid>
        <GridSplitter Grid.Row="1" Grid.Column="0"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Center"
                      Background="White"
                      ShowsPreview="True"
                      Height="3"/>
        <local:KeypadButtonView Grid.Row="2" Grid.Column="0" DataContext="{Binding Kp}"/>
        <GridSplitter Grid.Row="3" Grid.Column="0"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Center"
                      Background="White"
                      ShowsPreview="True"
                      Height="3"/>
        <local:BlinkMarineButtonView Grid.Row="5" Grid.Column="0" IsEnabled="{Binding Path=Kp.ColorsEnabled}" DataContext="{Binding Kp}"/>
    </Grid>
</UserControl>
