<UserControl x:Class="DingoConfigurator.Views.KeypadButtonView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DingoConfigurator.Views"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:cd="clr-namespace:CanDevices.DingoPdm;assembly=CanDevices"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <DataGrid AutoGenerateColumns="False"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              CanUserSortColumns="False"
              ItemsSource="{Binding AllButtons}">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Button"
                                Binding="{Binding Number}"
                                IsReadOnly="True"
                                Width="70"
                                MinWidth="70"
                                HeaderStyle="{StaticResource CenterAlignedHeaderStyle}">
                <DataGridTextColumn.ElementStyle>
                    <Style TargetType="TextBlock">
                        <Setter Property="HorizontalAlignment"
                                Value="Center" />
                    </Style>
                </DataGridTextColumn.ElementStyle>
            </DataGridTextColumn>
            <DataGridCheckBoxColumn Header="Enable"
                                    Binding="{Binding Enabled, UpdateSourceTrigger=PropertyChanged}"
                                    Width="50"
                                    MinWidth="50"
                                    HeaderStyle="{StaticResource CenterAlignedHeaderStyle}">
                <DataGridCheckBoxColumn.CellStyle>
                    <Style TargetType="DataGridCell" BasedOn="{StaticResource ValidationCellStyle}"/>
                </DataGridCheckBoxColumn.CellStyle>
                <DataGridCheckBoxColumn.ElementStyle>
                    <Style TargetType="CheckBox">
                        <Setter Property="HorizontalAlignment"
                                Value="Center" />
                    </Style>
                </DataGridCheckBoxColumn.ElementStyle>
            </DataGridCheckBoxColumn>
            <DataGridTextColumn Header="Name"
                                Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                Width="150"
                                MinWidth="150"
                                HeaderStyle="{StaticResource CenterAlignedHeaderStyle}">
                <DataGridTextColumn.CellStyle>
                    <Style TargetType="DataGridCell" BasedOn="{StaticResource ValidationCellStyle}"/>
                </DataGridTextColumn.CellStyle>
                <DataGridTextColumn.ElementStyle>
                    <Style TargetType="TextBlock">
                        <Setter Property="HorizontalAlignment"
                                Value="Center" />
                    </Style>
                </DataGridTextColumn.ElementStyle>
            </DataGridTextColumn>
            <DataGridTemplateColumn Header="State"
                                    IsReadOnly="True"
                                    Width="70"
                                    MinWidth="70"
                                    HeaderStyle="{StaticResource CenterAlignedHeaderStyle}">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <Ellipse Name="StatusEllipse"
                                 Height="15"
                                 Width="15"
                                 Fill="Lime">
                            <Ellipse.Style>
                                <Style TargetType="{x:Type Ellipse}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding State}"
                                                     Value="True">
                                            <Setter Property="Opacity"
                                                    Value="1.0" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding State}"
                                                     Value="False">
                                            <Setter Property="Opacity"
                                                    Value="0.1" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
            <DataGridTemplateColumn  Header="Mode"
                                    Width="120" MinWidth="120" HeaderStyle="{StaticResource CenterAlignedHeaderStyle}">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <ComboBox HorizontalContentAlignment="Center"
                                  ItemsSource="{Binding Source={StaticResource InputModeEnumDataSource}, Mode=OneWay}"
                                  SelectedValue="{Binding Mode, UpdateSourceTrigger=PropertyChanged}"
                                  BorderThickness="0">
                        </ComboBox>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
                <DataGridTemplateColumn.CellStyle>
                    <Style TargetType="DataGridCell" BasedOn="{StaticResource ValidationCellStyle}"/>
                </DataGridTemplateColumn.CellStyle>
            </DataGridTemplateColumn>

            <DataGridTemplateColumn  Header="Var 0"
                                    Width="120" MinWidth="120" HeaderStyle="{StaticResource CenterAlignedHeaderStyle}">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <ComboBox HorizontalContentAlignment="Center"
                                  ItemsSource="{Binding Source={StaticResource VarMapEnumDataSource}, Mode=OneWay}"
                                  SelectedValue="{Binding ValVars[0], UpdateSourceTrigger=PropertyChanged}"
                                  BorderThickness="0">
                        </ComboBox>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
                <DataGridTemplateColumn.CellStyle>
                    <Style TargetType="DataGridCell" BasedOn="{StaticResource ValidationCellStyle}"/>
                </DataGridTemplateColumn.CellStyle>
            </DataGridTemplateColumn>
            <DataGridTemplateColumn  Header="Var 1"
                                    Width="120" MinWidth="120" HeaderStyle="{StaticResource CenterAlignedHeaderStyle}">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <ComboBox HorizontalContentAlignment="Center"
                                  ItemsSource="{Binding Source={StaticResource VarMapEnumDataSource}, Mode=OneWay}"
                                  SelectedValue="{Binding ValVars[1], UpdateSourceTrigger=PropertyChanged}"
                                  BorderThickness="0">
                        </ComboBox>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
                <DataGridTemplateColumn.CellStyle>
                    <Style TargetType="DataGridCell" BasedOn="{StaticResource ValidationCellStyle}"/>
                </DataGridTemplateColumn.CellStyle>
            </DataGridTemplateColumn>
            <DataGridTemplateColumn  Header="Var 2"
                                    Width="120" MinWidth="120" HeaderStyle="{StaticResource CenterAlignedHeaderStyle}">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <ComboBox HorizontalContentAlignment="Center"
                                  ItemsSource="{Binding Source={StaticResource VarMapEnumDataSource}, Mode=OneWay}"
                                  SelectedValue="{Binding ValVars[2], UpdateSourceTrigger=PropertyChanged}"
                                  BorderThickness="0">
                        </ComboBox>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
                <DataGridTemplateColumn.CellStyle>
                    <Style TargetType="DataGridCell" BasedOn="{StaticResource ValidationCellStyle}"/>
                </DataGridTemplateColumn.CellStyle>
            </DataGridTemplateColumn>
            <DataGridTemplateColumn  Header="Var 3"
                                    Width="120" MinWidth="120" HeaderStyle="{StaticResource CenterAlignedHeaderStyle}">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <ComboBox HorizontalContentAlignment="Center"
                                  ItemsSource="{Binding Source={StaticResource VarMapEnumDataSource}, Mode=OneWay}"
                                  SelectedValue="{Binding ValVars[3], UpdateSourceTrigger=PropertyChanged}"
                                  BorderThickness="0">
                        </ComboBox>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
                <DataGridTemplateColumn.CellStyle>
                    <Style TargetType="DataGridCell" BasedOn="{StaticResource ValidationCellStyle}"/>
                </DataGridTemplateColumn.CellStyle>
            </DataGridTemplateColumn>
            <DataGridTemplateColumn  Header="LED Fault Var"
                                    Width="120" MinWidth="120" HeaderStyle="{StaticResource CenterAlignedHeaderStyle}">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <ComboBox HorizontalContentAlignment="Center"
                                  ItemsSource="{Binding Source={StaticResource VarMapEnumDataSource}, Mode=OneWay}"
                                  SelectedValue="{Binding FaultVar, UpdateSourceTrigger=PropertyChanged}"
                                  BorderThickness="0">
                        </ComboBox>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
                <DataGridTemplateColumn.CellStyle>
                    <Style TargetType="DataGridCell" BasedOn="{StaticResource ValidationCellStyle}"/>
                </DataGridTemplateColumn.CellStyle>
            </DataGridTemplateColumn>
            <DataGridCheckBoxColumn Header="Plot"
                                    Binding="{Binding Plot, UpdateSourceTrigger=PropertyChanged}"
                                    Width="70"
                                    MinWidth="70"
                                    HeaderStyle="{StaticResource CenterAlignedHeaderStyle}">
                <DataGridCheckBoxColumn.CellStyle>
                    <Style TargetType="DataGridCell" BasedOn="{StaticResource ValidationCellStyle}"/>
                </DataGridCheckBoxColumn.CellStyle>
                <DataGridCheckBoxColumn.ElementStyle>
                    <Style TargetType="CheckBox">
                        <Setter Property="HorizontalAlignment"
                                Value="Center" />
                    </Style>
                </DataGridCheckBoxColumn.ElementStyle>
            </DataGridCheckBoxColumn>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
